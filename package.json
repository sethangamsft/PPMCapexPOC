{
  "name": "capexdemo",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.3.1",
    "@sap-cloud-sdk/util": "^4.3.1",
    "@sap/cds": "^9",
    "@sap/low-code-event-handler": "^1.2.5",
    "@sap/xsenv": ">=3.3.2 <3.3.3",
    "@sap/xssec": "^4.12.1",
    "express": "^4",
    "hdb": "^2.26.4",
    "passport": "^0.7.0",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/resilience": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "@sap/dev-cap-tools": "^1.31.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "start-local": "npm run generate-entry-point && npm run cds-watch",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "cds-watch": "cds watch --open",
    "watch-capexdemo.capexrequest": "cds watch --open capexdemo.capexrequest/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy capexdemo --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-capexdemo.approvers": "cds watch --open capexdemo.approvers/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-capexdemo.capexusers": "cds watch --open capexdemo.capexusers/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "[development]": {
        "auth": {
          "kind": "dummy"
        }
      },
      "API_PROJECTPORTFOLIO": {
        "kind": "odata",
        "model": "srv/external/API_PROJECTPORTFOLIO",
        "[production]": {
          "credentials": {
            "destination": "X22_CFIN",
            "path": "/sap/opu/odata4/sap/zapi_projectportfolio_t1/srvd/sap/api_projectportfolio/0001/"
          }
        },
        "csrf": true,
        "csrfInBatch": true
      },
      "connectivity": true
    }
  },
  "lcap": true,
  "sapux": [
    "app/capexdemo.capexrequest",
    "app/capexdemo.approvers",
    "app/capexdemo.capexusers",
    "app/capexdemo.approvers",
    "app/capexdemo.approvers"
  ]
}
